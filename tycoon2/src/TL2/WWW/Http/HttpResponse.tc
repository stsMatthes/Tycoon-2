class HttpResponse
super HttpEntityMessage

public

major  :Int,
minor  :Int,
statusCode :Int,
status :String

methods

parser :MimeMessageParser(Self)
{
  HttpResponseParser.new
}

hasSetCookies :Bool { hasHeader("Set-Cookie") }
setCookies :List(HttpSetCookie) { headerValue("Set-Cookie") }
"setCookies:="(c :List(HttpSetCookie)) { setHeaderValue("Set-Cookie", HttpSetCookiesHeader, c) }

hasWWWAuthenticates :Bool { hasHeader("WWW-Authenticate") }
WWWAuthenticates :List(WWWAuthenticate) { headerValue("WWW-Authenticate") }
"WWWAuthenticates:="(c :List(WWWAuthenticate)) { setHeaderValue("WWW-Authenticate", WWWAuthenticateHeader, c) }



