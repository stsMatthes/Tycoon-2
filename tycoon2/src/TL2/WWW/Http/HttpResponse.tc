  out.writeString("HTTP/"),
  major.printOn(out),
  out.write('.'),
  minor.printOn(out),
  out.write(' '),
  statusCode.printOn(out),
  out.write(' '),
  out.writeString(status),
  out.writeString("\r\n"),
  super.emit(out)
}

private methods

_init6(ma :Int, mi :Int, sc :Int, s :String,
       h :MimeHeaderDictionary(MimeHeaderValue),
       b :Input) :Self
{
  _init2(h, b),

  major := ma,
  minor := mi,
  statusCode := sc,
  status := s,

  self
}

emitHeaders(out :Output)
{
  !hasDate ? { date := Date.now },

  super.emitHeaders(out)
}

;

